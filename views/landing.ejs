<% include partials/header %>

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h3>Lan Gaming</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h3>DJ Night</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h3>Robo Wars</h3>
            </div>
        </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <hr>
    <p class="display-4">Events</p>
    <div class="row">
        <% for(var i=0; i<events.length; i++){ %>
            <% if(i>=3){ %>
            <%    break; %>
            <% } %>
            <div class="col-sm-4">
                <div class="card card-margin text-center">
                    <img class="card-img-top" src="<%= events[i].image %>">
                    <div class="card-body">
                        <h4 class="card-title text-center"><%= events[i].name %></h4>
                        <a href="/events/<%= events[i]._id %>" class="btn btn-primary btn-block">More Info</a>
                    </div>
                </div>
            </div>
        <% } %>
        <a href="/events" class="btn btn-success" style="margin: auto">Load More</a>
    </div>
    <hr>
    <p class="display-4">Organizers</p>
    <div class="row">
        <div class="col-sm-4">
            <img src="images/abhi.jpg" class="rounded-circle center-img org">
            <br>
            <h2 class="text-center">Abhijeet</h2>
            <p class="text-center">COMP T.E. B-507</p>
        </div>
        <div class="col-sm-4">
            <img src="images/vijay.jpg" class="rounded-circle center-img org">
            <br>
            <h2 class="text-center">Vijay</h2>
            <p class="text-center">COMP T.E. B-503</p>
        </div>
        <div class="col-sm-4">
            <img src="images/pavan.jpg" class="rounded-circle center-img org">
            <br>
            <h2 class="text-center">Pavan</h2>
            <p class="text-center">COMP T.E. B-504</p>
        </div>
    </div>
</div>

<% include partials/footer %>